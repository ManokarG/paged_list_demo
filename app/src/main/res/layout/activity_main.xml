<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.mask.pagingdemo.MainActivity">

    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="0dp"
        android:id="@+id/recyclerNotes"/>

    <Button
        android:layout_width="match_parent"
        android:text="Insert"
        android:id="@+id/btnUpdate"
        android:layout_height="wrap_content" />

    <Button
        android:layout_width="match_parent"
        android:text="Get From Network"
        android:id="@+id/btnGetFromNetwork"
        android:layout_height="wrap_content" />

    <android.support.v7.widget.SwitchCompat
        android:padding="15dp"
        android:layout_width="match_parent"
        android:text="Enable Network Scrolling"
        android:id="@+id/switchNetworkScrolling"
        android:layout_height="wrap_content" />

</LinearLayout>
